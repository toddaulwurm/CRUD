@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<div class="text-center">
    <h2>Edit a Dish!</h2>
    <a href="/">Home</a>
    <hr>
    <form asp-action="Update" method="post" asp-controller="Home">
        <input type="hidden" asp-for="DishId" value="@ViewBag.Dish.DishId">
        <div class="form-group">
            <label asp-for="Name">Recipe Name</label>
            <input class="form-control" asp-for="Name" value="@ViewBag.Dish.Name">
        </div>
        <div class="form-group">
            <label asp-for="Chef">Chef's Name</label>
            <input class="form-control" asp-for="Chef" value="@ViewBag.Dish.Chef">
        </div>
        <div class="form-group">
            <label asp-for="Calories">Calories</label>
            <input class="form-control" asp-for="Calories" value="@ViewBag.Dish.Calories">
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness</label>
            <input type="range" min="1" max="10" class="form-range" asp-for="Tastiness" value="@ViewBag.Dish.Tastiness">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input class="form-control" asp-for="Description" value="@ViewBag.Dish.Description">
        </div>

        <input type="submit" class="btn btn-success">
    </form>
</div>